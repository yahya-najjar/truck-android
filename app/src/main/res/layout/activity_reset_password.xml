<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/this_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/linearLayout"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:padding="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enter_email_reset"
                android:id="@+id/textreg"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="35dp"
                android:textSize="15dp"
                android:gravity="center|center_vertical"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/email_search"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.03"
                android:background="@drawable/rounded_edittext"
                android:drawablePadding="22dp"
                android:ems="10"
                android:focusable="true"
                android:gravity="start"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="7dip"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/orange" />


            <Button
                android:id="@+id/search_btn"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:background="@drawable/rounded"
                android:onClick="ResetPassword"
                android:shadowColor="#1499A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="@string/search_hint"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:indeterminateTint="@color/orange"
                android:layout_marginTop="30dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/Resactive"
                android:layout_gravity="center_horizontal"
                android:gravity="center|bottom"
                android:layout_marginTop="20sp"
                android:textColor="#ba1313" />


            <Button
                android:id="@+id/cancel_search"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:background="@drawable/rounded_reg"
                android:onClick="CancelResetPassword"
                android:shadowColor="#1499A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:drawableStart="@drawable/ic_left_arrow"
                android:drawablePadding="-20dp"
                android:text="@string/cancel"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="Ver 1.0.0"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="All rights reserved"
                android:textAlignment="center"
                android:textColor="@color/white" />


        </LinearLayout>
    </RelativeLayout>

</ScrollView>
